<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="0.5dp"
        android:background="@drawable/my_custom_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f9fff9">

            <TextView
                android:id="@+id/card_view_image_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:textColor="@color/md_black_1000"/>

            <TextView
                android:id="@+id/card_view_contentid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>


        </RelativeLayout>


        <ImageView
            android:id="@+id/card_view_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            tools:clickable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:background="#f9fff9">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#f9fff9">

                <ImageView
                    android:id="@+id/card_view_icon_favorite"
                    android:layout_alignParentLeft="true"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:src="@drawable/mark_as_favorite_off"
                    tools:clickable="false" />

                <ImageView
                    android:id="@+id/card_view_icon_group"
                    android:layout_toRightOf="@id/card_view_icon_favorite"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:src="@drawable/ic_add_group"
                    tools:clickable="false" />

                <ImageView
                    android:id="@+id/card_view_icon_location"
                    android:layout_toRightOf="@id/card_view_icon_group"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:src="@drawable/ic_cardview_location"
                    tools:clickable="false" />

                <ImageView
                    android:id="@+id/card_view_icon_moreInfo"
                    android:layout_alignParentRight="true"
                    android:foregroundGravity="center_vertical"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:src="@drawable/ic_more_info"
                    tools:clickable="false" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here is for keywords"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>